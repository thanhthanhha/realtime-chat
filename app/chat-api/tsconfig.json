{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "declaration": true,
    "declarationDir": "./dist/types"
  },
  "files": ["./src/types/typings.d.ts"],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "types/typings.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}


